{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
{# Affichage les messages flash d'une catégorie :  #}
    {# {% for message in app.flashes("bonjour") %}
        <div>{{ message }}</div>
    {% endfor %} #}
    {# Affichage les messages flash de plusieurs catégorie :  #}
    {% for categorie, messages  in app.flashes(["bonjour", "redirect"]) %}
        {% for mess in messages %}
            <div> <strong>{{ categorie }}</strong>{{ mess }}</div>
        {% endfor %}
    {% endfor %}
    <h2>Bonjour {{ prenom ~ ' ' ~ nom }}</h2>
    <p>Déjà {{ app.session.get("nbVisite") }} visite(s)!</p>
    <a href="{{path('app_bonjour', {nom:'Fontaine', prenom:'Jean'}) }}">Jean Fontaine</a>
    <br>
    <a href="{{ path('app_hello', {username:'John'})}}">John Doe</a>
{% endblock %}